<!--suppress ALL -->
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns="http://java.sun.com/xml/ns/persistence"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="postgresql">
        <provider>org.hibernate.reactive.provider.ReactivePersistenceProvider</provider>
        <!--        <exclude-unlisted-classes>true</exclude-unlisted-classes>-->

        <class>io.pinnacl.commons.features.postaladdress.data.persistence.PostalAddressEntity</class>
        <class>io.pinnacl.commons.features.sociallinks.data.persistence.SocialLinkEntity</class>
        <class>io.pinnacl.commons.features.traits.data.persistence.PinnaclTraitEntity</class>
        <class>io.pinnacl.commons.features.forms.data.persistence.DocumentEntity</class>

        <class>io.pinnacl.academics.school.data.persistence.TermEntity</class>
        <class>io.pinnacl.academics.school.data.persistence.TuitionFeeEntity</class>
        <class>io.pinnacl.academics.school.data.persistence.SchoolMetadataEntity</class>
        <class>io.pinnacl.academics.school.data.persistence.SchoolEntity</class>

        <class>io.pinnacl.academics.admissions.data.persistence.AdmissionQuestionAnswerEntity</class>
        <class>io.pinnacl.academics.admissions.data.persistence.AdmissionMetadataEntity</class>
        <class>io.pinnacl.academics.admissions.data.persistence.AdmissionEntity</class>

        <properties>

            <!-- SQL statement logging -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.highlight_sql" value="true"/>

        </properties>

    </persistence-unit>

</persistence>
