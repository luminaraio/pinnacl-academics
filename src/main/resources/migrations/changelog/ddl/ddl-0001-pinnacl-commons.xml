<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="uuid_type" value="uuid" dbms="h2"/>
    <property name="uuid_type" value="uuid" dbms="postgresql"/>
    <property name="uuid_type" value="varchar(255)" dbms="mysql"/>

    <property name="uuid_function" value="random_uuid()" dbms="h2"/>
    <property name="uuid_function" value="uuid_generate_v4()" dbms="postgresql"/>
    <property name="uuid_function" value="uuid()" dbms="mysql"/>

    <!-- Create auxiliary tables -->
    <changeSet author="pinnacl-team" id="ddl-0001-01-create-pinnacl-commons-tables">

        <createTable tableName="pinnacl_traits">
            <column name="id" type="${uuid_type}" defaultValueComputed="${uuid_function}">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="name" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="enabled" type="boolean" defaultValueBoolean="false"/>
            <column name="data" type="jsonb">
                <constraints nullable="false"/>
            </column>
            <column name="owner_id" type="${uuid_type}"/>
            <column name="deleted" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="int" defaultValueNumeric="0"/>
            <column name="created_by" type="${uuid_type}"/>
            <column name="created_on" type="datetime" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
            <column name="updated_by" type="${uuid_type}"/>
            <column name="updated_on" type="datetime" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="postal_addresses">
            <column name="id" type="${uuid_type}" defaultValueComputed="${uuid_function}">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="street_address" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="address_locality" type="text"/>
            <column name="address_region" type="text"/>
            <column name="postal_code" type="text"/>
            <column name="post_office_box_number" type="text"/>
            <column name="country_name" type="text"/>
            <column name="country_code" type="text"/>
            <column name="owner_id" type="${uuid_type}"/>
            <column name="deleted" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="int" defaultValueNumeric="0"/>
            <column name="created_by" type="${uuid_type}"/>
            <column name="created_on" type="datetime" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
            <column name="updated_by" type="${uuid_type}"/>
            <column name="updated_on" type="datetime" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="social_links">
            <column name="id" type="${uuid_type}" defaultValueComputed="${uuid_function}">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="url" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="alternate_text" type="text"/>
            <column name="network" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="owner_id" type="${uuid_type}"/>
            <column name="deleted" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="int" defaultValueNumeric="0"/>
            <column name="created_by" type="${uuid_type}"/>
            <column name="created_on" type="datetime" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
            <column name="updated_by" type="${uuid_type}"/>
            <column name="updated_on" type="datetime" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="forms_documents">
            <column name="id" type="${uuid_type}" defaultValueComputed="${uuid_function}">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="assetId" type="${uuid_type}">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="caption" type="text"/>
            <column name="content_size" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="content_url" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="definition_name" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="data" type="jsonb">
                <constraints nullable="false"/>
            </column>
            <column name="owner_id" type="${uuid_type}"/>
            <column name="deleted" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="int" defaultValueNumeric="0"/>
            <column name="created_by" type="${uuid_type}"/>
            <column name="created_on" type="datetime" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
            <column name="updated_by" type="${uuid_type}"/>
            <column name="updated_on" type="datetime" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>